@page "/Cursos/{id:int}"
@model SumandoValor.Web.Pages.Cursos.DetailsModel
@using SumandoValor.Domain.Entities
@{
    ViewData["Title"] = Model.Curso?.Titulo ?? "Curso";
}

@if (Model.Curso == null)
{
    <div class="alert alert-warning">
        <p class="mb-0">Curso no encontrado.</p>
    </div>
    <a asp-page="/Cursos" class="btn btn-secondary">Volver a Cursos</a>
}
else
{
    <div class="mb-4">
        <a asp-page="/Cursos" class="btn btn-link mb-3">← Volver a Cursos</a>
        <h1>@Model.Curso.Titulo</h1>
        <p class="text-muted">@Model.Curso.Descripcion</p>
        @if (!string.IsNullOrWhiteSpace(Model.Curso.PublicoObjetivo))
        {
            <p><strong>Público Objetivo:</strong> @Model.Curso.PublicoObjetivo</p>
        }
    </div>

    <div class="mb-4">
        <h2 class="mb-4">Talleres Disponibles</h2>
        @if (Model.Talleres == null || !Model.Talleres.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <p class="mb-0">No hay talleres disponibles para este curso.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var taller in Model.Talleres)
                {
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title fw-bold mb-0">@taller.Titulo</h5>
                                    @if (taller.Estatus == EstatusTaller.Abierto)
                                    {
                                        <span class="badge bg-success">Abierto</span>
                                    }
                                    else if (taller.Estatus == EstatusTaller.Cerrado)
                                    {
                                        <span class="badge bg-secondary">Cerrado</span>
                                    }
                                    else if (taller.Estatus == EstatusTaller.Cancelado)
                                    {
                                        <span class="badge bg-danger">Cancelado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Finalizado</span>
                                    }
                                </div>
                                <p class="card-text text-muted small mb-3">
                                    @(taller.Descripcion?.Length > 100 ? taller.Descripcion.Substring(0, 100) + "..." : taller.Descripcion ?? "")
                                </p>
                                <div class="mb-3">
                                    <div class="row g-2 small">
                                        <div class="col-6">
                                            <i class="bi bi-calendar3 me-1 text-primary"></i>
                                            <strong>Fecha:</strong><br>
                                            @taller.FechaInicio.ToString("dd/MM/yyyy")
                                        </div>
                                        <div class="col-6">
                                            <i class="bi bi-clock me-1 text-primary"></i>
                                            <strong>Hora:</strong><br>
                                            @taller.HoraInicio.ToString(@"hh\:mm")
                                        </div>
                                        <div class="col-6">
                                            <i class="bi bi-geo-alt me-1 text-primary"></i>
                                            <strong>Modalidad:</strong><br>
                                            @taller.Modalidad
                                        </div>
                                        <div class="col-6">
                                            <i class="bi bi-people me-1 text-primary"></i>
                                            <strong>Cupos:</strong><br>
                                            <span class="badge @(taller.CuposDisponibles > 0 ? "bg-success" : "bg-danger")">
                                                @taller.CuposDisponibles de @taller.CuposMaximos
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <a asp-page="/Talleres/Details" asp-route-id="@taller.Id" class="btn btn-primary w-100">
                                    <i class="bi bi-eye me-1"></i>Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}
