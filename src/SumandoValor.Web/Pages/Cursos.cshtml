@page
@model CursosModel
@using SumandoValor.Domain.Entities
@{
    ViewData["Title"] = "Programa formativo";
}

@await Html.PartialAsync("_PageHeader", new SumandoValor.Web.Pages.Shared.PageHeaderModel
{
    Title = "Programa formativo",
    Subtitle = "Explora nuestro programa formativo y talleres.",
    UseBrandBackground = false
})

<div class="container my-5">

    @if (Model.Cursos == null || !Model.Cursos.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <p class="mb-0">No hay programas formativos disponibles en este momento.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var curso in Model.Cursos)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card card-kpmg h-100 hover-lift">
                        <div class="card-body p-4 d-flex flex-column">
                            <div class="course-media mb-3">
                                <div class="d-flex align-items-center justify-content-between gap-3">
                                    <div class="d-flex align-items-center gap-3">
                                        <span class="course-media-icon">
                                            <i class="bi bi-journal-bookmark-fill"></i>
                                        </span>
                                        <div>
                                            <div class="course-media-kicker">Programa formativo</div>
                                            <div class="fw-semibold">Programa formativo</div>
                                        </div>
                                    </div>
                                    @if (!curso.EsPublico)
                                    {
                                        <span class="badge bg-secondary">Interno</span>
                                    }
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-start gap-2 mb-2">
                                <span class="badge badge-kpmg">Programa formativo</span>
                            </div>

                            <h2 class="h5 card-title fw-bold mb-2">@curso.Titulo</h2>

                            <p class="card-text text-muted mb-3">
                                @(curso.Descripcion.Length > 140 ? curso.Descripcion.Substring(0, 140) + "..." : curso.Descripcion)
                            </p>

                            @if (!string.IsNullOrWhiteSpace(curso.PublicoObjetivo))
                            {
                                <div class="text-muted small mb-3">
                                    <i class="bi bi-people me-1"></i>
                                    <strong>PÃºblico:</strong> @curso.PublicoObjetivo
                                </div>
                            }

                            <div class="mt-auto">
                                <a asp-page="/Cursos/Details" asp-route-id="@curso.Id" class="btn btn-primary w-100">
                                    <i class="bi bi-arrow-right-circle me-1"></i>Ver talleres
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
