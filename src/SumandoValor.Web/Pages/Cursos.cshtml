@page
@model CursosModel
@using SumandoValor.Domain.Entities
@{
    ViewData["Title"] = "Cursos";
}

<div class="container my-5">
    <div class="mb-4">
        <h1 class="display-5 fw-bold">Cursos Disponibles</h1>
        <p class="text-muted">Explora nuestros cursos y talleres formativos</p>
    </div>

    @if (Model.Cursos == null || !Model.Cursos.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <p class="mb-0">No hay cursos disponibles en este momento.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var curso in Model.Cursos)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3">
                                <span class="badge bg-primary mb-2">Curso</span>
                                <h5 class="card-title fw-bold">@curso.Titulo</h5>
                                <p class="card-text text-muted small">
                                    @(curso.Descripcion.Length > 120 ? curso.Descripcion.Substring(0, 120) + "..." : curso.Descripcion)
                                </p>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(curso.PublicoObjetivo))
                            {
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-people me-1"></i>
                                        <strong>PÃºblico:</strong> @curso.PublicoObjetivo
                                    </small>
                                </div>
                            }
                            <div class="mt-auto">
                                <a asp-page="/Cursos/Details" asp-route-id="@curso.Id" class="btn btn-primary w-100">
                                    <i class="bi bi-arrow-right-circle me-1"></i>Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
