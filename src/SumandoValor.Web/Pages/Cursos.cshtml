@page
@model CursosModel
@using SumandoValor.Domain.Entities
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Programa Formativo";
}

@await Html.PartialAsync("_PageHeader", new SumandoValor.Web.Pages.Shared.PageHeaderModel
{
    Title = "Programa Formativo",
    Subtitle = "Explora nuestro programa formativo y talleres.",
    UseBrandBackground = false
})

<div class="container my-5">
    <!-- Campo de código de acceso -->
    <div class="row mb-4">
        <div class="col-md-6 col-lg-4 mx-auto">
            <div class="card card-kpmg">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-key me-2"></i>Código de Acceso
                    </h5>
                    <p class="text-muted small mb-3">Si tienes un código de acceso para un programa formativo interno, ingrésalo aquí:</p>
                    <form method="post" asp-page-handler="ValidateCode" class="d-flex gap-2">
                        <input type="text" 
                               name="codigoAcceso" 
                               class="form-control" 
                               placeholder="Ingresa tu código"
                               maxlength="20"
                               required />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Validar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Cursos == null || !Model.Cursos.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <p class="mb-0">No hay programas formativos disponibles en este momento.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var curso in Model.Cursos)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card card-kpmg h-100 hover-lift">
                        <div class="card-body p-4 d-flex flex-column">
                            @if (!curso.EsPublico)
                            {
                                <div class="mb-2">
                                    <span class="badge bg-secondary">Interno</span>
                                </div>
                            }

                            <h2 class="h5 card-title fw-bold mb-2">@curso.Titulo</h2>

                            <p class="card-text text-muted mb-3">
                                @(curso.Descripcion.Length > 140 ? curso.Descripcion.Substring(0, 140) + "..." : curso.Descripcion)
                            </p>

                            @if (!string.IsNullOrWhiteSpace(curso.PublicoObjetivo))
                            {
                                <div class="text-muted small mb-3">
                                    <i class="bi bi-people me-1"></i>
                                    <strong>Público:</strong> @curso.PublicoObjetivo
                                </div>
                            }

                            <div class="mt-auto">
                                @if (!curso.EsPublico && !Model.CursosConAcceso.GetValueOrDefault(curso.Id, false))
                                {
                                    <a asp-page="/Cursos/Access" asp-route-id="@curso.Id" class="btn btn-primary w-100">
                                        <i class="bi bi-lock me-1"></i>Acceder con clave
                                    </a>
                                }
                                else
                                {
                                    <a asp-page="/Cursos/Details" asp-route-id="@curso.Id" class="btn btn-primary w-100">
                                        <i class="bi bi-arrow-right-circle me-1"></i>Ver talleres
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
