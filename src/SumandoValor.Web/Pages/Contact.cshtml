@page
@model ContactModel
@{
    ViewData["Title"] = "Contáctanos";
}

@await Html.PartialAsync("_PageHeader", new SumandoValor.Web.Pages.Shared.PageHeaderModel
{
    Title = "Contáctanos",
    Subtitle = "Envíanos un mensaje y te responderemos a la brevedad.",
    UseBrandBackground = false
})

<div class="container my-5">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card card-kpmg form-card">
                <div class="card-body p-4 p-lg-5">
                    <h2 class="h4 fw-bold mb-4">Formulario de contacto</h2>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Input.Nombre" class="form-label">Nombre</label>
                                <input asp-for="Input.Nombre" class="form-control" />
                                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Input.Titulo" class="form-label">Título</label>
                                <input asp-for="Input.Titulo" class="form-control" />
                                <span asp-validation-for="Input.Titulo" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Input.Mensaje" class="form-label">Mensaje</label>
                                <textarea asp-for="Input.Mensaje" class="form-control" rows="6"></textarea>
                                <span asp-validation-for="Input.Mensaje" class="text-danger"></span>
                            </div>
                            @if (Model.ShowCaptcha)
                            {
                                <div class="col-12">
                                    @if (!string.IsNullOrEmpty(Model.CaptchaQuestion))
                                    {
                                        <label class="form-label">@Model.CaptchaQuestion</label>
                                        <input type="text" asp-for="Input.CaptchaToken" class="form-control" autocomplete="off" inputmode="numeric" maxlength="3" placeholder="Respuesta" />
                                    }
                                    else if (!string.IsNullOrEmpty(Model.CaptchaSiteKey))
                                    {
                                        <label class="form-label">Verificación de seguridad</label>
                                        <div id="captcha-widget"></div>
                                        <input type="hidden" asp-for="Input.CaptchaToken" />
                                    }
                                    <span asp-validation-for="Input.CaptchaToken" class="text-danger"></span>
                                </div>
                            }
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send me-1"></i>Enviar
                            </button>
                            <a asp-page="/Index" class="btn btn-outline-secondary">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card card-kpmg h-100">
                <div class="card-body p-4 p-lg-5">
                    <h3 class="h5 fw-bold mb-3">Información</h3>
                    <p class="text-muted mb-4">También puedes escribirnos directamente:</p>
                    <div class="d-grid gap-2">
                        <a class="btn btn-outline-primary" href="mailto:fundacionkpmg@kpmg.com">
                            <i class="bi bi-envelope me-1"></i>fundacionkpmg@kpmg.com
                        </a>
                        <div class="text-muted small">
                            <i class="bi bi-geo-alt me-1"></i>Caracas, Venezuela
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (Model.ShowCaptcha && !string.IsNullOrEmpty(Model.CaptchaSiteKey) && string.IsNullOrEmpty(Model.CaptchaQuestion))
    {
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                if (typeof turnstile !== 'undefined') {
                    turnstile.render('#captcha-widget', {
                        sitekey: '@Model.CaptchaSiteKey',
                        callback: function(token) { document.getElementById('Input_CaptchaToken').value = token; }
                    });
                }
            });
        </script>
    }
}
