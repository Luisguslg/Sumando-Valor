@page
@model SumandoValor.Web.Pages.Profile.TalleresModel
@using SumandoValor.Domain.Entities
@{
    ViewData["Title"] = "Mis Talleres";
}

@await Html.PartialAsync("_PageHeader", new SumandoValor.Web.Pages.Shared.PageHeaderModel
{
    Title = "Mis talleres",
    Subtitle = "Tu historial de inscripciones y próximos pasos.",
    UseBrandBackground = false
})

<div class="container my-5">
    @if (Model.Inscripciones == null || !Model.Inscripciones.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">No estás inscrito en ningún taller. <a asp-page="/Cursos">Explora nuestros cursos</a> para inscribirte.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var inscripcion in Model.Inscripciones)
            {
                var taller = inscripcion.Taller;
                <div class="col-md-6 col-lg-4">
                    <div class="card card-kpmg h-100 hover-lift">
                        <div class="card-body p-4 d-flex flex-column">
                            <div class="card-media mb-3">
                                <img src="~/images/cards/workshop.svg" alt="" loading="lazy" />
                            </div>
                            <div class="d-flex justify-content-between align-items-start gap-2 mb-2">
                                <span class="badge badge-kpmg">@taller.Curso.Titulo</span>
                                <span class="badge @(inscripcion.Estado == EstadoInscripcion.Activa ? "bg-success" : "bg-secondary")">
                                    @(inscripcion.Estado == EstadoInscripcion.Activa ? "Inscrito" : "Cancelado")
                                </span>
                            </div>

                            <h3 class="h5 fw-bold mb-2">@taller.Titulo</h3>

                            <div class="d-flex flex-wrap gap-2 small text-muted mb-3">
                                <span><i class="bi bi-calendar-event me-1"></i>@DateFormat.FechaConDia(taller.FechaInicio)</span>
                                <span><i class="bi bi-clock me-1"></i>@DateFormat.Hora(taller.HoraInicio)</span>
                                <span><i class="bi bi-geo-alt me-1"></i>@taller.Modalidad</span>
                            </div>

                            <div class="mt-auto">
                                <div class="border rounded p-3 mb-3">
                                    <div class="fw-semibold mb-1">Próximos pasos</div>
                                    <div class="text-muted small">
                                        Encuesta: <span class="badge bg-light text-dark">Pendiente</span><br />
                                        Certificado: <span class="badge bg-light text-dark">Pendiente</span>
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <a asp-page="/Talleres/Details" asp-route-id="@inscripcion.TallerId" class="btn btn-outline-primary">
                                        Ver evento
                                    </a>
                                    <button type="button" class="btn btn-secondary" disabled>
                                        Encuesta (próximamente)
                                    </button>
                                    <button type="button" class="btn btn-secondary" disabled>
                                        Descargar certificado (próximamente)
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
