@page
@model SumandoValor.Web.Pages.Admin.SurveyTemplates.CreateModel
@{
    ViewData["Title"] = "Nueva plantilla de encuesta";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <h1 class="h4 mb-1">Nueva plantilla de encuesta</h1>
    <div class="text-muted">Define el alcance (programa formativo o taller) y luego agrega preguntas.</div>
</div>

<div class="admin-card">
    <form method="post" class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Nombre</label>
            <input class="form-control" asp-for="Input.Name" maxlength="200" required />
            <span class="text-danger" asp-validation-for="Input.Name"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Activa</label>
            <div class="form-check">
                <input class="form-check-input" asp-for="Input.IsActive" />
                <label class="form-check-label" asp-for="Input.IsActive">SÃ­</label>
            </div>
        </div>

        <div class="col-12">
            <div class="border rounded p-3">
                <div class="fw-semibold mb-2">Alcance</div>
                <div class="row g-2">
                    <div class="col-md-6">
                        <label class="form-label small">Programa formativo (Curso)</label>
                        <select class="form-select" asp-for="Input.CursoId" asp-items="Model.Cursos">
                            <option value="">(No aplica)</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label small">Taller</label>
                        <select class="form-select" asp-for="Input.TallerId" asp-items="Model.Talleres">
                            <option value="">(No aplica)</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <div class="text-muted small">
                            Debes elegir <strong>solo uno</strong>: o Curso o Taller.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 d-flex gap-2">
            <button class="btn btn-primary" type="submit">Crear plantilla</button>
            <a asp-page="/Admin/SurveyTemplates/Index" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

