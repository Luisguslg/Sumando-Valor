@page
@model SumandoValor.Web.Pages.Admin.SurveyTemplates.CreateModel
@{
    ViewData["Title"] = "Nueva encuesta";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <h1 class="h4 mb-1">Nueva encuesta</h1>
    <div class="text-muted">Crea una encuesta global (se usa igual para todos los talleres) y luego agrega preguntas.</div>
</div>

<div class="admin-card">
    <form method="post" class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Nombre</label>
            <input class="form-control" asp-for="Input.Name" maxlength="200" required />
            <span class="text-danger" asp-validation-for="Input.Name"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Activa</label>
            <div class="form-check">
                <input class="form-check-input" asp-for="Input.IsActive" />
                <label class="form-check-label" asp-for="Input.IsActive">Sí</label>
            </div>
        </div>

        <div class="col-12">
            <label class="form-label">Descripción (opcional)</label>
            <textarea class="form-control" asp-for="Input.Description" rows="3" maxlength="4000"
                      placeholder="Ej: Cuéntanos tu experiencia para ayudarnos a mejorar."></textarea>
            <span class="text-danger" asp-validation-for="Input.Description"></span>
        </div>

        <div class="col-12 d-flex gap-2">
            <button class="btn btn-primary" type="submit">Crear encuesta</button>
            <a asp-page="/Admin/SurveyTemplates/Index" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

