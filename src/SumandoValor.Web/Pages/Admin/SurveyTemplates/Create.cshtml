@page
@model SumandoValor.Web.Pages.Admin.SurveyTemplates.CreateModel
@{
    ViewData["Title"] = "Nueva encuesta";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-2">
        <div>
            <h1 class="h4 mb-1"><i class="bi bi-clipboard-plus me-2"></i>Nueva encuesta</h1>
            <p class="text-muted mb-0">Crea una encuesta global que se usará en todos los talleres. Después de crear, podrás agregar preguntas.</p>
        </div>
        <a asp-page="/Admin/SurveyTemplates/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-transparent py-3">
                <h5 class="mb-0 text-primary"><i class="bi bi-file-earmark-text me-2"></i>Información de la Encuesta</h5>
            </div>
            <div class="card-body p-4">
                <form method="post" class="row g-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="col-12">
                        <label class="form-label fw-bold small text-uppercase text-muted">Título</label>
                        <input class="form-control form-control-lg" asp-for="Input.Name" maxlength="200" 
                               placeholder="Ej: Encuesta de Satisfacción - Enero 2026" required />
                        <span class="text-danger small" asp-validation-for="Input.Name"></span>
                        <div class="form-text">Un nombre descriptivo para identificar esta plantilla internamente.</div>
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold small text-uppercase text-muted">Instrucciones</label>
                        <textarea class="form-control" asp-for="Input.Description" rows="4" maxlength="4000"
                                  placeholder="Escribe aquí las instrucciones que verán los participantes al iniciar la encuesta..."></textarea>
                    </div>

                    <div class="col-12">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <div class="form-check form-switch mb-0">
                                    <input class="form-check-input" asp-for="Input.IsActive" style="transform: scale(1.2);" />
                                    <label class="form-check-label ms-2 fw-semibold" asp-for="Input.IsActive">
                                        Publicar inmediatamente
                                    </label>
                                </div>
                                <div class="small text-muted mt-2 ms-5">
                                    Si activas esta opción, la encuesta será visible para los participantes asignados en cuanto guardes.
                                    <br><em>(Recomendamos dejarla inactiva hasta añadir las preguntas).</em>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 d-flex justify-content-end gap-2 pt-3">
                        <a asp-page="/Admin/SurveyTemplates/Index" class="btn btn-light text-muted px-4">Cancelar</a>
                        <button class="btn btn-primary px-4" type="submit">
                            <i class="bi bi-arrow-right me-1"></i>Continuar y Agregar Preguntas
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

