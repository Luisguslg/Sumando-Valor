@page
@model SumandoValor.Web.Pages.Admin.SurveyTemplates.IndexModel
@{
    ViewData["Title"] = "Encuestas";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
        <div>
            <h1 class="h4 mb-1"><i class="bi bi-clipboard-data me-2"></i>Encuestas</h1>
            <p class="text-muted mb-0">Gestiona encuestas de satisfacción que se aplican a todos los talleres.</p>
        </div>
        <a asp-page="/Admin/SurveyTemplates/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Nueva encuesta
        </a>
    </div>
</div>

<div class="admin-card">
    @if (!Model.Rows.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-clipboard-x display-4 text-muted"></i>
            <p class="text-muted mt-3">No hay encuestas creadas. Crea la primera para recoger feedback de los participantes.</p>
            <a asp-page="/Admin/SurveyTemplates/Create" class="btn btn-primary">Crear encuesta</a>
        </div>
    }
    else
    {
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Activa</th>
                <th class="text-end">Preguntas</th>
                <th class="text-center">Acciones</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var t in Model.Rows)
            {
                <tr>
                    <td class="fw-semibold">@t.Name</td>
                    <td class="text-muted">@t.Description</td>
                    <td>
                        <span class="badge @(t.IsActive ? "bg-success" : "bg-secondary")">@(t.IsActive ? "Sí" : "No")</span>
                    </td>
                    <td class="text-end">@t.QuestionCount</td>
                    <td class="text-center">
                        <a asp-page="/Admin/SurveyTemplates/Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil me-1"></i>Editar
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    }
</div>

