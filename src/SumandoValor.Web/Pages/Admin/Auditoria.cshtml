@page "/Admin/Auditoria"
@model SumandoValor.Web.Pages.Admin.AuditoriaModel
@using System.Text.Json
@using System.Text.Json.Serialization
@{
    ViewData["Title"] = "Auditoría del Sistema";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

@await Html.PartialAsync("_PageHeader", new SumandoValor.Web.Pages.Shared.PageHeaderModel
{
    Title = "Auditoría del Sistema",
    Subtitle = "Registro completo de cambios y acciones en el sistema.",
    UseBrandBackground = false
})

<div class="container my-4">
    <!-- Filtros -->
    <div class="admin-card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label small">Tipo de Entidad</label>
                    <select class="form-select" name="EntityType">
                        <option value="">Todos</option>
                        <option value="Curso" selected="@(Model.EntityType == "Curso")">Curso</option>
                        <option value="Taller" selected="@(Model.EntityType == "Taller")">Taller</option>
                        <option value="Usuario" selected="@(Model.EntityType == "Usuario")">Usuario</option>
                        <option value="Rol" selected="@(Model.EntityType == "Rol")">Rol</option>
                        <option value="Inscripcion" selected="@(Model.EntityType == "Inscripcion")">Inscripción</option>
                        <option value="Certificado" selected="@(Model.EntityType == "Certificado")">Certificado</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small">Acción</label>
                    <select class="form-select" name="Action">
                        <option value="">Todas</option>
                        <option value="Create" selected="@(Model.Action == "Create")">Crear</option>
                        <option value="Update" selected="@(Model.Action == "Update")">Actualizar</option>
                        <option value="Delete" selected="@(Model.Action == "Delete")">Eliminar</option>
                        <option value="ToggleActive" selected="@(Model.Action == "ToggleActive")">Activar/Desactivar</option>
                        <option value="MakeModerador" selected="@(Model.Action == "MakeModerador")">Asignar Moderador</option>
                        <option value="RemoveModerador" selected="@(Model.Action == "RemoveModerador")">Quitar Moderador</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label small">Buscar</label>
                    <input class="form-control" name="Search" value="@Model.Search" placeholder="Email, entidad, acción..." />
                </div>
                <div class="col-md-2">
                    <label class="form-label small">&nbsp;</label>
                    <button class="btn btn-primary w-100" type="submit">Filtrar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Resultados -->
    <div class="admin-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Eventos de Auditoría</h5>
            <span class="badge bg-secondary">Total: @Model.TotalCount</span>
        </div>
        <div class="card-body">
            @if (Model.Events == null || !Model.Events.Any())
            {
                <p class="text-muted">No se encontraron eventos de auditoría.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Fecha/Hora</th>
                                <th>Usuario</th>
                                <th>Entidad</th>
                                <th>Acción</th>
                                <th>Detalles</th>
                                <th>IP</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evt in Model.Events)
                            {
                                <tr>
                                    <td>
                                        <div>@evt.CreatedAt.ToString("dd/MM/yyyy")</div>
                                        <div class="text-muted small">@evt.CreatedAt.ToString("HH:mm:ss")</div>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@evt.ActorName</div>
                                        @if (!string.IsNullOrEmpty(evt.ActorEmail))
                                        {
                                            <div class="text-muted small">@evt.ActorEmail</div>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@evt.EntityType</span>
                                        @if (!string.IsNullOrEmpty(evt.EntityId))
                                        {
                                            <div class="text-muted small mt-1">ID: @evt.EntityId</div>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(evt.Action switch {
                                            "Create" => "bg-success",
                                            "Update" => "bg-warning",
                                            "Delete" => "bg-danger",
                                            _ => "bg-secondary"
                                        })">@evt.Action</span>
                                    </td>
                                    <td>
                                        @if (evt.OldValues != null || evt.NewValues != null)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-info" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#detailsModal_@evt.Id">
                                                Ver Cambios
                                            </button>
                                            
                                            <!-- Modal para detalles -->
                                            <div class="modal fade" id="detailsModal_@evt.Id" tabindex="-1">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Detalles del Cambio</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            @if (evt.OldValues != null)
                                                            {
                                                                <h6>Valores Anteriores:</h6>
                                                                <pre class="bg-light p-3 rounded"><code>@System.Text.Json.JsonSerializer.Serialize(evt.OldValues, new JsonSerializerOptions { WriteIndented = true })</code></pre>
                                                            }
                                                            @if (evt.NewValues != null)
                                                            {
                                                                <h6>Valores Nuevos:</h6>
                                                                <pre class="bg-light p-3 rounded"><code>@System.Text.Json.JsonSerializer.Serialize(evt.NewValues, new JsonSerializerOptions { WriteIndented = true })</code></pre>
                                                            }
                                                            @if (evt.Details != null)
                                                            {
                                                                <h6>Información Adicional:</h6>
                                                                <pre class="bg-light p-3 rounded"><code>@System.Text.Json.JsonSerializer.Serialize(evt.Details, new JsonSerializerOptions { WriteIndented = true })</code></pre>
                                                            }
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else if (evt.Details != null)
                                        {
                                            <span class="text-muted small">Ver detalles</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(evt.IpAddress))
                                        {
                                            <code class="small">@evt.IpAddress</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginación -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Paginación">
                        <ul class="pagination justify-content-center">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Model.PageUrl(Model.PageNumber - 1)">Anterior</a>
                                </li>
                            }
                            
                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Model.PageUrl(i)">@i</a>
                                </li>
                            }
                            
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Model.PageUrl(Model.PageNumber + 1)">Siguiente</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>
