@page
@model SumandoValor.Web.Pages.Admin.AuditoriaModel
@{
    ViewData["Title"] = "Auditoría";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h1 class="h4 mb-1">Registro de Auditoría</h1>
            <div class="text-muted">Logs de cambios por tabla y acción. Solo visible para Admin.</div>
        </div>
    </div>

    <form method="get" class="row g-2 align-items-end">
        <div class="col-md-4">
            <label class="form-label small">Tabla</label>
            <select name="TableName" class="form-select">
                <option value="">Todas</option>
                <option value="Cursos" selected="@(Model.TableName == "Cursos")">Cursos</option>
                <option value="Talleres" selected="@(Model.TableName == "Talleres")">Talleres</option>
                <option value="Inscripciones" selected="@(Model.TableName == "Inscripciones")">Inscripciones</option>
                <option value="Certificados" selected="@(Model.TableName == "Certificados")">Certificados</option>
                <option value="EncuestasSatisfaccion" selected="@(Model.TableName == "EncuestasSatisfaccion")">Encuestas</option>
                <option value="MensajesContacto" selected="@(Model.TableName == "MensajesContacto")">Mensajes</option>
                <option value="CarouselItems" selected="@(Model.TableName == "CarouselItems")">Carrusel</option>
                <option value="SiteImages" selected="@(Model.TableName == "SiteImages")">Imágenes</option>
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label small">Acción</label>
            <select name="Action" class="form-select">
                <option value="">Todas</option>
                <option value="INSERT" selected="@(Model.Action == "INSERT")">Crear</option>
                <option value="UPDATE" selected="@(Model.Action == "UPDATE")">Actualizar</option>
                <option value="DELETE" selected="@(Model.Action == "DELETE")">Eliminar</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
        <div class="col-md-2">
            <a href="/Admin/Auditoria" class="btn btn-secondary w-100">Limpiar</a>
        </div>
    </form>
</div>

<div class="admin-card">
    @if (Model.Logs.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Tabla</th>
                        <th>Acción</th>
                        <th>Registro ID</th>
                        <th>Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.Logs)
                    {
                        <tr>
                            <td class="text-nowrap">@log.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@log.TableName</td>
                            <td>
                                @if (log.Action == "INSERT")
                                {
                                    <span class="badge bg-success">Crear</span>
                                }
                                else if (log.Action == "UPDATE")
                                {
                                    <span class="badge bg-warning text-dark">Actualizar</span>
                                }
                                else if (log.Action == "DELETE")
                                {
                                    <span class="badge bg-danger">Eliminar</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@log.Action</span>
                                }
                            </td>
                            <td>@log.RecordId</td>
                            <td>
                                @if (!string.IsNullOrEmpty(log.UserEmail))
                                {
                                    @log.UserEmail
                                }
                                else if (!string.IsNullOrEmpty(log.UserId))
                                {
                                    <span class="text-muted small">@log.UserId</span>
                                }
                                else
                                {
                                    <span class="text-muted">Sistema</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Paginación" class="mt-3">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@(Model.PageNumber <= 1 ? "#" : Model.GetPageUrl(Model.PageNumber - 1))">Anterior</a>
                    </li>
                    @for (var i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Model.GetPageUrl(i)">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@(Model.PageNumber >= Model.TotalPages ? "#" : Model.GetPageUrl(Model.PageNumber + 1))">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }

        <div class="mt-3 text-muted small">
            Mostrando @((Model.PageNumber - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) de @Model.TotalCount registros
        </div>
    }
    else
    {
        <p class="text-muted mb-0">No se encontraron registros de auditoría con los filtros actuales.</p>
    }
</div>
