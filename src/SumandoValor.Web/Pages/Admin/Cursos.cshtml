@page
@model CursosModel
@using SumandoValor.Domain.Entities
@{
    ViewData["Title"] = "Gestión de Programa Formativo";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <a asp-page="/Admin" class="btn btn-link text-muted p-0">← Volver</a>
    <a asp-page="/Admin/Cursos/Create" class="btn btn-primary">Crear nuevo</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Orden</th>
                <th>Título</th>
                <th>Estado</th>
                <th>Público</th>
                <th>Talleres</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model.Cursos)
            {
                <tr>
                    <td>@(curso.Orden ?? 0)</td>
                    <td>@curso.Titulo</td>
                    <td>
                        @if (curso.Estado == EstatusCurso.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td>
                        @if (curso.EsPublico)
                        {
                            <span class="badge bg-success">Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                            @if (!string.IsNullOrEmpty(curso.ClaveAcceso))
                            {
                                <br /><small class="text-muted">Clave: @curso.ClaveAcceso</small>
                            }
                        }
                    </td>
                    <td>@curso.Talleres.Count</td>
                    <td>
                        <a asp-page="/Admin/Cursos/Edit" asp-route-id="@curso.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        @if (!curso.EsPublico)
                        {
                            <a asp-page="/Admin/Cursos/SendAccess" asp-route-id="@curso.Id" class="btn btn-sm btn-outline-info">Enviar enlace</a>
                        }
                        @if (curso.Talleres.Count == 0)
                        {
                            <form method="post" asp-page-handler="ToggleEstado" asp-route-id="@curso.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm @(curso.Estado == EstatusCurso.Activo ? "btn-outline-secondary" : "btn-outline-success")">
                                    @(curso.Estado == EstatusCurso.Activo ? "Desactivar" : "Activar")
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
