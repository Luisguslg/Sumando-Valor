@page "/Admin/Cursos/Edit/{id:int}"
@model EditModel
@using SumandoValor.Domain.Entities
@{
    ViewData["Title"] = "Editar Programa Formativo";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a asp-page="/Admin/Cursos" class="btn btn-link">← Volver</a>
</div>

@if (Model.Curso == null)
{
    <div class="alert alert-warning">
        <p class="mb-0">Programa Formativo no encontrado.</p>
    </div>
    <a asp-page="/Admin/Cursos" class="btn btn-secondary">Volver</a>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <input type="hidden" asp-for="Input.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="mb-3">
                    <label asp-for="Input.Titulo" class="form-label">Título *</label>
                    <input asp-for="Input.Titulo" class="form-control" />
                    <span asp-validation-for="Input.Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Descripcion" class="form-label">Descripción *</label>
                    <textarea asp-for="Input.Descripcion" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Input.Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.PublicoObjetivo" class="form-label">Público Objetivo</label>
                    <input asp-for="Input.PublicoObjetivo" class="form-control" />
                    <span asp-validation-for="Input.PublicoObjetivo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="Input.EsPublico" class="form-check-input" id="esPublicoCheck" />
                        <label asp-for="Input.EsPublico" class="form-check-label">Es Público</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Orden" class="form-label">Orden (opcional)</label>
                    <input asp-for="Input.Orden" class="form-control" type="number" />
                    <span asp-validation-for="Input.Orden" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Estado" class="form-label">Estado</label>
                    <select asp-for="Input.Estado" class="form-select">
                        <option value="@EstatusCurso.Activo">Activo</option>
                        <option value="@EstatusCurso.Inactivo">Inactivo</option>
                    </select>
                    <span asp-validation-for="Input.Estado" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-page="/Admin/Cursos" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
        @if (!Model.Curso!.EsPublico)
        {
            <div class="col-md-8 mt-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-link-45deg me-2"></i>Acceso Interno</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Curso.ClaveAcceso))
                        {
                            <div class="mb-3">
                                <label class="form-label">Clave de Acceso (para ingresar manualmente)</label>
                                <div class="input-group">
                                    <input type="text" class="form-control font-monospace" value="@Model.Curso.ClaveAcceso" readonly id="claveAcceso" />
                                    <button type="button" class="btn btn-outline-secondary" onclick="copyToClipboard('claveAcceso', this)">
                                        <i class="bi bi-clipboard"></i> Copiar
                                    </button>
                                </div>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Curso.TokenAccesoUnico))
                        {
                            var accessLink = Url.Page("/Cursos/Details", pageHandler: null, values: new { id = Model.Curso.Id, token = Model.Curso.TokenAccesoUnico }, protocol: Request.Scheme);
                            <div class="mb-3">
                                <label class="form-label">Enlace de Acceso (compartir por correo)</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" value="@accessLink" readonly id="accessLink" />
                                    <button type="button" class="btn btn-outline-secondary" onclick="copyToClipboard('accessLink', this)">
                                        <i class="bi bi-clipboard"></i> Copiar
                                    </button>
                                </div>
                                <small class="text-muted">Pega este enlace en tu cliente de correo. Funciona para varias personas.</small>
                            </div>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="GenerateLink" class="mb-3">
                                <input type="hidden" name="id" value="@Model.Curso.Id" />
                                <label class="form-label">Enlace de Acceso</label>
                                <div class="d-flex gap-2 align-items-center">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-link-45deg me-1"></i>Generar Enlace
                                    </button>
                                    <small class="text-muted">Crea un enlace para compartir por correo.</small>
                                </div>
                            </form>
                        }
                        
                        <a asp-page="/Admin/Cursos/SendAccess" asp-route-id="@Model.Curso.Id" class="btn btn-outline-primary">
                            <i class="bi bi-envelope me-1"></i>Enviar enlace por correo a varias personas
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function copyToClipboard(elementId, btn) {
            var element = document.getElementById(elementId);
            element.select();
            element.setSelectionRange(0, 99999);
            navigator.clipboard ? navigator.clipboard.writeText(element.value) : document.execCommand('copy');
            
            var b = btn && btn.tagName === 'BUTTON' ? btn : (event && event.target ? event.target.closest('button') : null);
            if (b) {
                var orig = b.innerHTML;
                b.innerHTML = '<i class="bi bi-check"></i> Copiado';
                b.classList.add('btn-success');
                b.classList.remove('btn-outline-secondary');
                setTimeout(function() { b.innerHTML = orig; b.classList.remove('btn-success'); b.classList.add('btn-outline-secondary'); }, 2000);
            }
        }
    </script>
}
