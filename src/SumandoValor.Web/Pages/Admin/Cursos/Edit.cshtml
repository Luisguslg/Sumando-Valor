@page "/Admin/Cursos/Edit/{id:int}"
@model EditModel
@using SumandoValor.Domain.Entities
@{
    ViewData["Title"] = "Editar Programa Formativo";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <h1>Editar Programa Formativo</h1>
    <a asp-page="/Admin/Cursos" class="btn btn-link">← Volver a Programa Formativo</a>
</div>

@if (Model.Curso == null)
{
    <div class="alert alert-warning">
        <p class="mb-0">Programa Formativo no encontrado.</p>
    </div>
    <a asp-page="/Admin/Cursos" class="btn btn-secondary">Volver</a>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <input type="hidden" asp-for="Input.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="mb-3">
                    <label asp-for="Input.Titulo" class="form-label">Título *</label>
                    <input asp-for="Input.Titulo" class="form-control" />
                    <span asp-validation-for="Input.Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Descripcion" class="form-label">Descripción *</label>
                    <textarea asp-for="Input.Descripcion" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Input.Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.PublicoObjetivo" class="form-label">Público Objetivo</label>
                    <input asp-for="Input.PublicoObjetivo" class="form-control" />
                    <span asp-validation-for="Input.PublicoObjetivo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="Input.EsPublico" class="form-check-input" id="esPublicoCheck" />
                        <label asp-for="Input.EsPublico" class="form-check-label">Es Público</label>
                    </div>
                </div>

                @if (!Model.Curso!.EsPublico)
                {
                    <div class="mb-3">
                        <h5>Acceso Interno</h5>
                        
                        @if (!string.IsNullOrEmpty(Model.Curso.ClaveAcceso))
                        {
                            <div class="mb-3">
                                <label class="form-label">Clave de Acceso</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" value="@Model.Curso.ClaveAcceso" readonly id="claveAcceso" />
                                    <button type="button" class="btn btn-outline-secondary" onclick="copyToClipboard('claveAcceso')">
                                        <i class="bi bi-clipboard"></i> Copiar
                                    </button>
                                </div>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Curso.TokenAccesoUnico))
                        {
                            var accessLink = Url.Page("/Cursos/Details", pageHandler: null, values: new { id = Model.Curso.Id, token = Model.Curso.TokenAccesoUnico }, protocol: Request.Scheme);
                            <div class="mb-3">
                                <label class="form-label">Enlace de Acceso (para compartir por correo)</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" value="@accessLink" readonly id="accessLink" />
                                    <button type="button" class="btn btn-outline-secondary" onclick="copyToClipboard('accessLink')">
                                        <i class="bi bi-clipboard"></i> Copiar
                                    </button>
                                </div>
                                <small class="text-muted">Copia este enlace y envíalo desde tu cliente de correo. Funciona para múltiples personas.</small>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label class="form-label">Enlace de Acceso</label>
                                <form method="post" asp-page-handler="GenerateLink" style="display: inline;">
                                    <input type="hidden" name="id" value="@Model.Curso.Id" />
                                    <button type="submit" class="btn btn-primary">Generar Enlace</button>
                                </form>
                                <small class="text-muted d-block mt-2">Genera un enlace que puedes compartir por correo a múltiples personas.</small>
                            </div>
                        }
                        
                        <div class="mt-3">
                            <a asp-page="/Admin/Cursos/SendAccess" asp-route-id="@Model.Curso.Id" class="btn btn-outline-primary">
                                <i class="bi bi-envelope"></i> Enviar enlace por correo
                            </a>
                        </div>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="Input.Orden" class="form-label">Orden (opcional)</label>
                    <input asp-for="Input.Orden" class="form-control" type="number" />
                    <span asp-validation-for="Input.Orden" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Estado" class="form-label">Estado</label>
                    <select asp-for="Input.Estado" class="form-select">
                        <option value="@EstatusCurso.Activo">Activo</option>
                        <option value="@EstatusCurso.Inactivo">Inactivo</option>
                    </select>
                    <span asp-validation-for="Input.Estado" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-page="/Admin/Cursos" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function copyToClipboard(elementId) {
            const element = document.getElementById(elementId);
            element.select();
            element.setSelectionRange(0, 99999);
            document.execCommand('copy');
            
            const btn = event.target.closest('button');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check"></i> Copiado';
            btn.classList.add('btn-success');
            btn.classList.remove('btn-outline-secondary');
            
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.classList.remove('btn-success');
                btn.classList.add('btn-outline-secondary');
            }, 2000);
        }
    </script>
}
