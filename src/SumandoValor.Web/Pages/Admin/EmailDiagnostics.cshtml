@page
@model SumandoValor.Web.Pages.Admin.EmailDiagnosticsModel
@{
    ViewData["Title"] = "Email Diagnostics";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <h1 class="h4 mb-3">Email Diagnostics</h1>
    <p class="text-muted mb-4">
        Envía un correo de prueba para validar la configuración del ambiente (Development / IIS SMTP).
    </p>

    <form method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="Input.To" class="form-label">Enviar a</label>
            <input asp-for="Input.To" class="form-control" placeholder="correo@dominio.com" />
            <span asp-validation-for="Input.To" class="text-danger"></span>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send me-1"></i>Enviar correo de prueba
            </button>
        </div>
    </form>

    @if (!string.IsNullOrWhiteSpace(Model.LastResult))
    {
        <hr class="my-4" />
        <div class="alert @(Model.LastResultOk ? "alert-success" : "alert-danger") mb-0">
            <div class="fw-semibold mb-1">Resultado</div>
            <div class="small" style="white-space: pre-wrap;">@Model.LastResult</div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

