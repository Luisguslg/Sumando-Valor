@page
@model RegisterModel
@using SumandoValor.Domain.Helpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Registrarse";
}

@await Html.PartialAsync("_PageHeader", new SumandoValor.Web.Pages.Shared.PageHeaderModel
{
    Title = "Crear cuenta",
    Subtitle = "Regístrate para inscribirte en talleres y acceder a tu perfil.",
    UseBrandBackground = false
})

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card card-kpmg form-card">
                <div class="card-body p-4 p-lg-5">
                    <div class="mb-4">
                        <h2 class="h4 fw-bold mb-1">Completa tus datos para registrarte</h2>
                    </div>

                    <form method="post" id="registerForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="border-bottom pb-2 mb-3">
                        <h3 class="h6 fw-bold mb-0">Datos de acceso</h3>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Input.Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Cedula" class="form-label">Cédula <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <select class="form-select" style="max-width: 80px;" id="cedulaTipo">
                                    <option value="V">V</option>
                                    <option value="E">E</option>
                                </select>
                                <input asp-for="Input.Cedula" class="form-control" placeholder="V-12345678 / E-12345678" id="cedulaInput" />
                            </div>
                            <span asp-validation-for="Input.Cedula" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row g-3 mt-0">
                        <div class="col-md-6">
                            <label asp-for="Input.Password" class="form-label">Contraseña <span class="text-danger">*</span></label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <small class="text-muted">Mínimo 12 caracteres: mayúsculas, minúsculas, números y caracteres especiales (@@<text>$</text>!%*?&amp;)</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar Contraseña <span class="text-danger">*</span></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="border-bottom pb-2 mt-4 mb-3">
                        <h3 class="h6 fw-bold mb-0">Datos personales</h3>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Input.Nombres" class="form-label">Nombres <span class="text-danger">*</span></label>
                            <input asp-for="Input.Nombres" class="form-control" />
                            <span asp-validation-for="Input.Nombres" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Apellidos" class="form-label">Apellidos <span class="text-danger">*</span></label>
                            <input asp-for="Input.Apellidos" class="form-control" />
                            <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row g-3 mt-0">
                        <div class="col-md-4">
                            <label asp-for="Input.Sexo" class="form-label">Sexo <span class="text-danger">*</span></label>
                            <select asp-for="Input.Sexo" class="form-select">
                                <option value="">Seleccione...</option>
                                <option value="M">Hombre</option>
                                <option value="F">Mujer</option>
                            </select>
                            <span asp-validation-for="Input.Sexo" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.FechaNacimiento" class="form-label">Fecha de Nacimiento <span class="text-danger">*</span></label>
                            <input asp-for="Input.FechaNacimiento" type="date" class="form-control" />
                            <span asp-validation-for="Input.FechaNacimiento" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Input.Telefono" class="form-control" type="tel" pattern="[0-9]*" inputmode="numeric" />
                            <span asp-validation-for="Input.Telefono" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="border-bottom pb-2 mt-4 mb-3">
                        <h3 class="h6 fw-bold mb-0">Información adicional</h3>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Input.NivelEducativo" class="form-label">Nivel Educativo <span class="text-danger">*</span></label>
                            <select asp-for="Input.NivelEducativo" class="form-select">
                                <option value="">Seleccione...</option>
                                @foreach (var nivel in Catalogos.NivelesEducativos)
                                {
                                    <option value="@nivel.Key">@nivel.Value</option>
                                }
                            </select>
                            <span asp-validation-for="Input.NivelEducativo" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.SituacionLaboral" class="form-label">Situación Laboral <span class="text-danger">*</span></label>
                            <select asp-for="Input.SituacionLaboral" class="form-select">
                                <option value="">Seleccione...</option>
                                @foreach (var situacion in Catalogos.SituacionesLaborales)
                                {
                                    <option value="@situacion.Key">@situacion.Value</option>
                                }
                            </select>
                            <span asp-validation-for="Input.SituacionLaboral" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row g-3 mt-0">
                        <div class="col-md-6">
                            <label asp-for="Input.Sector" class="form-label">Sector <span class="text-danger">*</span></label>
                            <select asp-for="Input.Sector" class="form-select">
                                <option value="">Seleccione...</option>
                                <option value="TercerSector">Tercer sector</option>
                                <option value="SectorPrivado">Sector privado</option>
                                <option value="SectorPublico">Sector público</option>
                                <option value="Academia">Academia</option>
                            </select>
                            <span asp-validation-for="Input.Sector" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row g-3 mt-0">
                        <div class="col-md-6">
                            <label asp-for="Input.Pais" class="form-label">País <span class="text-danger">*</span></label>
                            <select asp-for="Input.Pais" class="form-select" id="paisSelect">
                                <option value="">Seleccione...</option>
                                <option value="Venezuela">Venezuela</option>
                                <option value="Colombia">Colombia</option>
                                <option value="Ecuador">Ecuador</option>
                                <option value="Peru">Perú</option>
                                <option value="Chile">Chile</option>
                                <option value="Argentina">Argentina</option>
                                <option value="Brasil">Brasil</option>
                                <option value="Panama">Panamá</option>
                                <option value="CostaRica">Costa Rica</option>
                                <option value="Mexico">México</option>
                                <option value="Espana">España</option>
                                <option value="EstadosUnidos">Estados Unidos</option>
                                <option value="Otro">Otro</option>
                            </select>
                            <span asp-validation-for="Input.Pais" class="text-danger"></span>
                        </div>
                        <div class="col-md-6" id="estadoGroup" style="display: none;">
                            <label asp-for="Input.Estado" class="form-label">Estado <span class="text-danger">*</span></label>
                            <select asp-for="Input.Estado" class="form-select" id="estadoSelect">
                                <option value="">Seleccione...</option>
                                @foreach (var estado in Catalogos.EstadosVenezuela)
                                {
                                    <option value="@estado.Key">@estado.Value</option>
                                }
                            </select>
                            <span asp-validation-for="Input.Estado" class="text-danger"></span>
                        </div>
                        <div class="col-md-6" id="municipioGroup" style="display: none;">
                            <label asp-for="Input.Municipio" class="form-label">Municipio <span class="text-danger">*</span></label>
                            <select asp-for="Input.Municipio" class="form-select" id="municipioSelect">
                                <option value="">Seleccione un estado primero...</option>
                            </select>
                            <span asp-validation-for="Input.Municipio" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-3">
                        <label asp-for="Input.CanalConocio" class="form-label">¿Cómo conoció la plataforma? <span class="text-danger">*</span></label>
                        <select asp-for="Input.CanalConocio" class="form-select">
                            <option value="">Seleccione...</option>
                            @foreach (var canal in Catalogos.CanalesConocio)
                            {
                                <option value="@canal.Key">@canal.Value</option>
                            }
                        </select>
                        <span asp-validation-for="Input.CanalConocio" class="text-danger"></span>
                    </div>

                    <div class="border-bottom pb-2 mt-4 mb-3">
                        <h3 class="h6 fw-bold mb-0">Discapacidad</h3>
                    </div>
                    <div class="mb-2">
                        <div class="form-check">
                            <input asp-for="Input.TieneDiscapacidad" class="form-check-input" type="checkbox" id="tieneDiscapacidad" />
                            <label class="form-check-label" for="tieneDiscapacidad">
                                Tengo una discapacidad
                            </label>
                        </div>
                    </div>
                    <div class="mb-3" id="discapacidadDescripcionGroup" style="display: none;">
                        <label asp-for="Input.DiscapacidadDescripcion" class="form-label">Descripción de la discapacidad <span class="text-danger">*</span></label>
                        <textarea asp-for="Input.DiscapacidadDescripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Input.DiscapacidadDescripcion" class="text-danger"></span>
                    </div>

                    @if (Model.ShowCaptcha)
                    {
                        <div class="mb-3">
                            <div id="captcha-widget"></div>
                            <input type="hidden" asp-for="Input.CaptchaToken" />
                            <span asp-validation-for="Input.CaptchaToken" class="text-danger"></span>
                        </div>
                    }

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-person-plus me-1"></i>Registrarse
                        </button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('tieneDiscapacidad').addEventListener('change', function() {
            const descGroup = document.getElementById('discapacidadDescripcionGroup');
            if (this.checked) {
                descGroup.style.display = 'block';
            } else {
                descGroup.style.display = 'none';
                document.getElementById('Input_DiscapacidadDescripcion').value = '';
            }
        });

        // Manejo de cédula con selector V/E
        const cedulaTipo = document.getElementById('cedulaTipo');
        const cedulaInput = document.getElementById('cedulaInput');
        
        cedulaTipo.addEventListener('change', function() {
            const tipo = this.value;
            const currentValue = cedulaInput.value.replace(/^[VE]-?/, '');
            cedulaInput.value = tipo + (currentValue ? '-' + currentValue : '');
        });

        cedulaInput.addEventListener('input', function() {
            let value = this.value.replace(/[^0-9VE-]/g, '');
            if (value.startsWith('V') || value.startsWith('E')) {
                cedulaTipo.value = value[0];
                value = value.substring(1).replace(/^-?/, '');
            }
            const tipo = cedulaTipo.value;
            if (tipo === 'V' && value.length > 8) {
                value = value.substring(0, 8);
            }
            this.value = tipo + (value ? '-' + value : '');
        });

        // Manejo de País/Estado/Municipio
        const paisSelect = document.getElementById('paisSelect');
        const estadoGroup = document.getElementById('estadoGroup');
        const municipioGroup = document.getElementById('municipioGroup');
        const estadoSelect = document.getElementById('estadoSelect');
        const municipioSelect = document.getElementById('municipioSelect');

        // Catálogo de municipios por estado
        const municipiosPorEstado = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Catalogos.MunicipiosPorEstado));

        function actualizarMunicipios() {
            const estadoKey = estadoSelect.value;
            municipioSelect.innerHTML = '<option value="">Seleccione...</option>';
            
            if (estadoKey && municipiosPorEstado[estadoKey]) {
                municipiosPorEstado[estadoKey].forEach(function(municipio) {
                    const option = document.createElement('option');
                    option.value = municipio;
                    option.textContent = municipio;
                    municipioSelect.appendChild(option);
                });
            }
        }

        paisSelect.addEventListener('change', function() {
            const isVenezuela = this.value === 'Venezuela';
            estadoGroup.style.display = isVenezuela ? 'block' : 'none';
            municipioGroup.style.display = isVenezuela ? 'block' : 'none';
            
            if (!isVenezuela) {
                estadoSelect.value = '';
                municipioSelect.innerHTML = '<option value="">Seleccione un estado primero...</option>';
                municipioSelect.value = '';
            } else {
                actualizarMunicipios();
            }
        });

        estadoSelect.addEventListener('change', function() {
            actualizarMunicipios();
            municipioSelect.value = '';
        });

        // Validación de teléfono: solo números
        const telefonoInput = document.getElementById('Input_Telefono');
        if (telefonoInput) {
            telefonoInput.addEventListener('input', function() {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
            
            telefonoInput.addEventListener('keypress', function(e) {
                const char = String.fromCharCode(e.which);
                if (!/[0-9]/.test(char)) {
                    e.preventDefault();
                }
            });
        }

        @if (Model.ShowCaptcha && !string.IsNullOrEmpty(Model.CaptchaSiteKey))
        {
            <text>
            // Inicializar captcha si está configurado
            // Esto se implementará cuando se configure el proveedor real
            </text>
        }
    </script>
}
