@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmar Email";
}

<div class="text-center">
    <h1>Confirmar Email</h1>
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert @(Model.StatusMessage.Contains("Error") ? "alert-danger" : "alert-success") mt-4">
            @Model.StatusMessage
        </div>
    }
    @if (Model.StatusMessage?.Contains("confirmado") == true)
    {
        <div class="mt-4">
            <a asp-page="./Login" class="btn btn-primary">Ir a Iniciar Sesi√≥n</a>
        </div>
    }
</div>
