@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title mb-4">Iniciar Sesión</h2>
                
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info">@TempData["Message"]</div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label">Recordarme</label>
                    </div>

                    @if (Model.ShowCaptcha)
                    {
                        <div class="mb-3">
                            <div id="captcha-widget"></div>
                            <input type="hidden" asp-for="Input.CaptchaToken" />
                            <span asp-validation-for="Input.CaptchaToken" class="text-danger"></span>
                        </div>
                    }

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                    </div>
                    <div class="text-center">
                        <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    </div>
                    <div class="text-center mt-2">
                        <a asp-page="./Register">¿No tienes cuenta? Regístrate</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (Model.ShowCaptcha && !string.IsNullOrEmpty(Model.CaptchaSiteKey))
    {
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
        <script>
            window.onload = function() {
                turnstile.render('#captcha-widget', {
                    sitekey: '@Model.CaptchaSiteKey',
                    callback: function(token) {
                        document.getElementById('Input_CaptchaToken').value = token;
                    }
                });
            };
        </script>
    }
}
