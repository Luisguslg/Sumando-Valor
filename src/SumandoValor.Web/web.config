<?xml version="1.0" encoding="utf-8"?>
<!--
  Configuración IIS - Producción
  Las variables de entorno deben configurarse en el servidor según el entorno.
  No versionar credenciales ni connection strings reales en el repositorio.
-->
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" 
                  arguments=".\SumandoValor.Web.dll" 
                  stdoutLogEnabled="true" 
                  stdoutLogFile=".\logs\stdout" 
                  hostingModel="inprocess">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <!-- Configurar en IIS o aquí según el entorno: ConnectionStrings__DefaultConnection, Email:Smtp:*, Captcha:Provider=Math -->
          <environmentVariable name="Captcha:Provider" value="Math" />
        </environmentVariables>
      </aspNetCore>
    </system.webServer>
  </location>
</configuration>
